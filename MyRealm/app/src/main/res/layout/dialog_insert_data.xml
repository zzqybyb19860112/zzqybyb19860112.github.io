<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="输入数据"
        android:textColor="#ff00ff"
        android:textSize="22sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="beginning|middle|end"
        >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生学号:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:textColorHint="#00ff00"
        android:id="@+id/id_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生姓名:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:textColorHint="#00ff00"
        android:id="@+id/name_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生性别:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:textColorHint="#00ff00"
        android:id="@+id/gender_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生年龄:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:textColorHint="#00ff00"
        android:id="@+id/age_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生语文成绩:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:textColorHint="#00ff00"
        android:id="@+id/score_et_1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生数学成绩:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:textColorHint="#00ff00"
        android:id="@+id/score_et_2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生英语成绩:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:textColorHint="#00ff00"
        android:id="@+id/score_et_3"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生学科名称:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:textColorHint="#ff0000"
        android:id="@+id/subject_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入学生综合学科成绩:"
        android:paddingLeft="12dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:textColorHint="#00ff00"
        android:id="@+id/score_et_4"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:id="@+id/cancel_btn"
            android:background="#ffff00"
            />
        <Button
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:background="#00ffff"
            android:id="@+id/confirm_btn"
            />
    </LinearLayout>
</LinearLayout>